@page
@model teatro.Pages.pecasModel
@{
    ViewData["Title"] = "Peças - Senac shopping";
    var filmes = Model.pecas;  // Acessando a lista de peças a partir do modelo
}
<header class="p-3 mb-3 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                <img class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap" src="" />
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="#" class="nav-link px-2 link-secondary">Home</a></li>
                <li><a href="#" class="nav-link px-2 link-body-emphasis">O Shopping</a></li>
                <li><a href="#" class="nav-link px-2 link-body-emphasis">Cinema</a></li>
                <li><a href="#" class="nav-link px-2 link-body-emphasis">Lojas</a></li>
                <li><a href="#" class="nav-link px-2 link-body-emphasis">Contato</a></li>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                <input type="search" class="form-control" placeholder="Buscar..." aria-label="Buscar">
            </form>
        </div>
    </div>
</header>

<div class="container mt-4">
    <h2>Pecas - Senac Shopping</h2>
    <div class="row mt-4">
        @for (int i = 0; i < pecas.Count; i++)
        {
            var filme = filmes[i];
            <div class="col-md-4 mb-4">
                <div class="movie-card">
                    <img src="@filme.ImagemUrl" class="img-fluid movie-image" alt="@filme.Titulo">
                    <div class="movie-details p-3">
                        <h5>@filme.Titulo</h5>
                        <p><strong>Gênero:</strong> @peca.Genero</p>
                        <p><strong>Duração:</strong> @peca.Duracao minutos</p>
                        <p><strong>Sessões:</strong> @peca.Sessoes</p>
                        <a href="/Detalhes/@(i+1)" class="btn btn-details">Mais detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .movie-card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 10px;
        background-color: #fff;
        overflow: hidden; /* Certifica que o conteúdo dentro do card não ultrapasse os limites */
    }

        .movie-card img.movie-image {
            width: 100%;
            height: 300px;
            object-fit: cover; /* Garante que a imagem cubra todo o espaço sem distorção */
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .movie-card:hover {
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        }

    .movie-details {
        padding: 15px;
    }

        .movie-details h5 {
            font-weight: bold;
            color: #6c63ff;
        }

        .movie-details p {
            margin: 0;
            color: #555;
        }

    .btn-details {
        background-color: #6c63ff;
        color: #fff;
        border-radius: 20px;
        padding: 5px 15px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-details:hover {
            background-color: #5a52e0;
            color: #fff;
        }
</style>
